@model CateringOrders.Areas.Identity.Pages.FoodItem.CreateModel

<h4>FoodItems</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodItems.Name" class="control-label"></label>
                <input asp-for="FoodItems.Name" class="form-control" />
                <span asp-validation-for="FoodItems.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItems.Description" class="control-label"></label>
                <input asp-for="FoodItems.Description" class="form-control" />
                <span asp-validation-for="FoodItems.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItems.Price" class="control-label"></label>
                <input asp-for="FoodItems.Price" class="form-control" />
                <span asp-validation-for="FoodItems.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FoodItems.IsDeleted" /> @Html.DisplayNameFor(model => model.FoodItems.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FoodItems.CategoryId" class="control-label"></label>
                <select asp-for="FoodItems.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
